# ==========================================
# NPM Configuration
# ==========================================

# Use exact versions in package.json
save-exact=false

# Always save installed packages to package.json
save=true

# Production mode configuration
production=false

# Disable package-lock.json generation (optional - remove this line to keep it)
# package-lock=false

# Use npm registry (default)
registry=https://registry.npmjs.org/

# Security - audit level
audit-level=moderate

# Logging
loglevel=warn

# Engine strict - enforce Node version from package.json
engine-strict=false

# Progress bar
progress=true
